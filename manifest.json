{
  "manifest_version": 2,
  "name": "Eboook",
  "description": "A tool to avoid ads in classic spanish ebook websites",
  "version": "1.1",
  "author": "Ramiro Olivera",
  "content_scripts": [
    {
      "matches": ["*://*.mundofile.info/*"],
      "js": ["options/espaebooks/download.js"]
    },
    {
      "matches": ["*://*.facildescarga.info/*"],
      "js": ["options/bajaepub/download.js"]
    },
    {
      "matches" : ["*://*.bajafiles.com/*"],
      "js": ["options/bajaebooks/download.js"]
    },
    {
      "matches" : ["*://*.beeupload.net/*"],
      "js": ["options/lectulandia/download.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png" 
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*.espaebook2.com/*",
    "*://*.mundofile.info/*",
    "*://*.bajafiles.com/*",
    "*://*.bajaebooks2.net/*",
    "*://*.bajaepub.com/*",
    "*://*.facildescarga.info/*",
    "*://*.epublibre.org/*",
    "*://*.beeupload.net/*",
    "*://*.lectulandia.com/*"
  ]
 }